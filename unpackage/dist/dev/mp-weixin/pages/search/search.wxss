page {
  height: 100%;
  display: flex;
}
.search-container {
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.search-container .search-wapper {
  flex: 1;
}
.search-container .search-wapper .search-history-container {
  background-color: #f8f8f8;
}
.search-container .search-wapper .search-history-container .search-header {
  padding: 15px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowarp;
  flex-direction: row;
  color: #0077ff;
  border-bottom: 1px solid #CCC;
  font-size: 14px;
  font-weight: 800;
}
.search-container .search-wapper .search-history-container .search-header .clear-history {
  color: #dd524d;
}
.search-container .search-wapper .search-history-container .search-content {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: wrap;
  flex-direction: row;
  padding: 15px;
}
.search-container .search-wapper .search-history-container .search-content .history-item {
  color: #0077ff;
  padding: 5px 10px;
  margin: 10px;
  border: 1px solid #0077ff;
  border-radius: 8px;
}
.search-container .search-wapper .search-history-container .no-data {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: nowarp;
  flex-direction: column;
  color: #CCC;
  height: 400rpx;
}